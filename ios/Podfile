podhelper_path = File.join(__dir__, 'Flutter', 'podhelper.rb')
load podhelper_path if File.exist?(podhelper_path)

platform :ios, '12.0'

target 'Runner' do
  # 阿里 SDK 必须使用静态链接
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      # 1. 修复 'Flutter/Flutter.h' 找不到的关键：强制注入搜索路径
      # 同时覆盖 Header 和 Framework 路径，确保插件能看到 Flutter 引擎
      config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
      config.build_settings['HEADER_SEARCH_PATHS'] << '"$(PODS_ROOT)/../Flutter/Flutter.framework/Headers" '
      config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Flutter/Flutter.framework/Headers" '

      config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= '$(inherited) '
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '"$(PODS_ROOT)/../Flutter" '
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '"$(SRCROOT)/Flutter" '

      # 2. 阿里 SDK 需要的常规兼容配置
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end

  # 3. 阿里 SDK GeneratedPluginRegistrant 补丁
  reg_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(reg_m)
    content = File.read(reg_m)
    if content.include?('@import flutter_livepush_plugin;')
      puts "Podfile: Patching Alivc import..."
      content.gsub!('@import flutter_livepush_plugin;', '#import "AlivcLivePusherPlugin.h"')
      File.open(reg_m, 'w') { |f| f.write(content) }
    end
  end
end