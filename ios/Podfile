# 1. 标准且正确的路径：当前 Podfile 同级目录下的 Flutter 文件夹
# 这里的 File.dirname(__FILE__) 就是 ios 目录
podhelper_path = File.join(File.dirname(__FILE__), 'Flutter', 'podhelper.rb')

# 2. 强力加载逻辑
if File.exist?(podhelper_path)
  load podhelper_path
else
  # 如果依然找不到，说明 Flutter 环境没初始化好，我们打印错误但不崩溃，
  # 这样可以让 pod install 继续跑完，方便看后续日志
  puts "################################################################"
  puts "ERROR: podhelper.rb NOT FOUND at #{podhelper_path}"
  puts "Please ensure 'flutter pub get' or 'flutter precache' ran successfully."
  puts "################################################################"

  # 定义空方法，防止后续代码调用报错
  def flutter_install_all_ios_pods(path); end
  def flutter_additional_ios_build_settings(target); end
end

platform :ios, '12.0'

target 'Runner' do
  # 阿里 SDK 要求静态链接
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 只有文件存在时才执行安装
  if File.exist?(podhelper_path)
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Runner" '
      end
    end
  end

  # 3. 阿里 SDK 补丁 (Ruby 版)
  reg_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(reg_m)
    content = File.read(reg_m)
    if content.include?('@import flutter_livepush_plugin;')
      puts "Applying AliCloud SDK Patch..."
      content.gsub!('@import flutter_livepush_plugin;', '#import "AlivcLivePusherPlugin.h"')
      File.open(reg_m, 'w') { |f| f.write(content) }
    end
  end
end