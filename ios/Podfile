# 1. 标准路径加载
# 这里的 __dir__ 就是 ios 目录
podhelper_path = File.join(__dir__, 'Flutter', 'podhelper.rb')

# 调试日志
puts "Checking podhelper at: #{podhelper_path}"

# 此时文件必须存在，因为 Pre-build 脚本刚刚强制复制了它
unless File.exist?(podhelper_path)
  raise "CRITICAL: podhelper.rb is missing even after Pre-build script!"
end

load podhelper_path

platform :ios, '12.0'

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 2. 安装所有插件 (path_provider 的救星)
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Runner" '
      end
    end
  end

  # 3. 阿里 SDK 导入修复
  reg_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(reg_m)
    content = File.read(reg_m)
    if content.include?('@import flutter_livepush_plugin;')
      puts "Podfile: Patching Alivc import..."
      content.gsub!('@import flutter_livepush_plugin;', '#import "AlivcLivePusherPlugin.h"')
      File.open(reg_m, 'w') { |f| f.write(content) }
    end
  end
end