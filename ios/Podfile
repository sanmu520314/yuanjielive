# 1. 终极路径搜索
def find_podhelper
  # 路径候选列表：针对 Codemagic 环境优化
  candidates = [
    File.join(File.dirname(__FILE__), 'Flutter', 'podhelper.rb'), # 标准路径
    File.expand_path('Flutter/podhelper.rb', File.dirname(__FILE__)),
    "#{Dir.pwd}/ios/Flutter/podhelper.rb",
    "#{Dir.pwd}/Flutter/podhelper.rb"
  ]

  candidates.each do |path|
    if File.exist?(path)
      puts "SUCCESS: Found podhelper.rb at #{path}"
      return path
    end
  end
  nil
end

podhelper_path = find_podhelper

if podhelper_path
  load podhelper_path
else
  puts "WARNING: podhelper.rb NOT FOUND!"
  # 定义空方法防止后续崩溃
  def flutter_install_all_ios_pods(path); end
  def flutter_additional_ios_build_settings(target); end
end

platform :ios, '12.0'

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  if podhelper_path
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Runner" '
      end
    end
  end

  # Ruby 版本的 GeneratedPluginRegistrant 修复
  reg_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(reg_m)
    content = File.read(reg_m)
    if content.include?('@import flutter_livepush_plugin;')
      content.gsub!('@import flutter_livepush_plugin;', '#import "AlivcLivePusherPlugin.h"')
      File.open(reg_m, 'w') { |f| f.write(content) }
    end
  end
end