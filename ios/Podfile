# 1. 定义一个辅助方法来加载 Flutter 脚本
def load_flutter_podhelper
  podhelper_file = File.expand_path(File.join('Flutter', 'podhelper.rb'), __dir__)
  if File.exist?(podhelper_file)
    load podhelper_file
    return true
  end
  false
end

# 加载脚本（如果加载成功，它会提供 flutter_install_all_ios_pods 方法）
has_flutter_helper = load_flutter_podhelper

platform :ios, '13.0'

target 'Runner' do
  # 阿里 SDK 必须使用静态链接
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 2. 如果脚本加载成功，安装所有插件
  if has_flutter_helper
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  # 获取 Runner 目录的绝对路径
  runner_dir = File.join(Dir.pwd, 'Runner')

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) rescue nil

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'

        # 核心：同时注入 HEADER_SEARCH_PATHS 和 USER_HEADER_SEARCH_PATHS
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << "\"#{runner_dir}\" "

        config.build_settings['USER_HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['USER_HEADER_SEARCH_PATHS'] << "\"#{runner_dir}\" "

        # 允许搜索子目录
        config.build_settings['ALWAYS_SEARCH_USER_PATHS'] = 'YES'
      end
    end
  end

  # 继续保持对 GeneratedPluginRegistrant.m 的修正
  registrant_m = File.join(runner_dir, 'GeneratedPluginRegistrant.m')
  if File.exist?(registrant_m)
    content = File.read(registrant_m)
    content.gsub!(/@import\s+flutter_livepush_plugin;/, '#import "AlivcLivePusherPlugin.h"')
    File.open(registrant_m, 'w') { |f| f.write(content) }
  end
end