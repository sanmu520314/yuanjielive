# 1. 动态获取路径，尝试多种可能的相对路径
def find_podhelper
  candidates = [
    File.join(__dir__, 'Flutter', 'podhelper.rb'),
    File.expand_path('Flutter/podhelper.rb', __dir__),
    File.join(Dir.pwd, 'ios', 'Flutter', 'podhelper.rb'),
    File.join(Dir.pwd, 'Flutter', 'podhelper.rb')
  ]

  candidates.each do |path|
    if File.exist?(path)
      puts "Found podhelper.rb at: #{path}"
      return path
    end
  end
  nil
end

podhelper_path = find_podhelper

if podhelper_path
  load podhelper_path
else
  # 如果真的找不到，打印当前目录结构辅助调试，但不直接 raise 导致进程死掉
  puts "CRITICAL: Current Dir: #{Dir.pwd}"
  puts "Directory Listing: #{Dir.glob('**/*.rb')}"
  # 尝试定义空方法防止后续崩溃，但这通常意味着插件不会被加载
  def flutter_install_all_ios_pods(path); end
  def flutter_additional_ios_build_settings(target); end
end

platform :ios, '12.0'

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 只有加载成功了才能调用
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # 执行 Flutter 官方设置
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      # 阿里 SDK 必备：允许非模块化引入
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Runner" '
      end
    end
  end

  # 3. 针对阿里插件的精准修复（Ruby 实现，更稳定）
  registrant_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(registrant_m)
    content = File.read(registrant_m)
    # 只把阿里插件这一行改掉，不影响 path_provider 等其他插件的 @import
    if content.include?('@import flutter_livepush_plugin;')
      content.gsub!('@import flutter_livepush_plugin;', '#import "AlivcLivePusherPlugin.h"')
      File.open(registrant_m, 'w') { |f| f.write(content) }
    end
  end
end