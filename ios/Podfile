# 使用相对路径加载，并增加备选方案
def load_flutter_helpers
  # 方案 A: 相对当前 Podfile 目录
  p1 = File.expand_path('Flutter/podhelper.rb', __dir__)
  # 方案 B: 相对上级目录（有些 CI 会把 Podfile 放在更深层）
  p2 = File.expand_path('../Flutter/podhelper.rb', __dir__)

  if File.exist?(p1)
    load p1
  elsif File.exist?(p2)
    load p2
  else
    # 如果都找不到，定义一个备用的 flutter_additional_ios_build_settings 以防 post_install 崩溃
    def flutter_additional_ios_build_settings(target); end
    puts "Warning: Flutter podhelper.rb not found. Please ensure 'flutter pub get' was executed."
  end
end

load_flutter_helpers

platform :ios, '12.0'

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 只有在方法存在时才调用，防止 Podfile 崩溃
  if defined?(flutter_install_all_ios_pods)
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # 应用 Flutter 官方构建设置
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'

      # 阿里 SDK 必备：允许非模块化引入
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Runner" '
      end
    end
  end

  # 3. 精准手术：只修改 GeneratedPluginRegistrant.m
  registrant_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(registrant_m)
    puts "Applying patch to GeneratedPluginRegistrant.m..."
    content = File.read(registrant_m)
    # 将 @import flutter_livepush_plugin 改为 #import "AlivcLivePusherPlugin.h"
    # 这样既保留了其他插件的 @import，又解决了阿里 SDK 的问题
    content.gsub!(/@import flutter_livepush_plugin;/, '#import "AlivcLivePusherPlugin.h"')
    File.open(registrant_m, 'w') { |f| f.write(content) }
  end
end