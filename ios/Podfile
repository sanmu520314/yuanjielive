# 1. 强制定位真正的 podhelper.rb
# __dir__ 是 ios/ 目录，所以我们要找 ios/Flutter/podhelper.rb
podhelper_path = File.expand_path('Flutter/podhelper.rb', __dir__)

# 调试打印，看看究竟找对了没
puts "DEBUG: Looking for podhelper at: #{podhelper_path}"

unless File.exist?(podhelper_path)
  # 如果找不到，直接抛错，不要假装成功，否则后面编译必挂
  raise "CRITICAL ERROR: podhelper.rb not found! Run 'flutter pub get' first."
end

load podhelper_path

platform :ios, '12.0'

target 'Runner' do
  # 阿里 SDK 必须静态链接
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 2. 安装插件 (这是 path_provider 能工作的关键)
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if defined?(flutter_additional_ios_build_settings)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      if target.name == 'Runner'
        config.build_settings['SWIFT_OBJC_BRIDGING_HEADER'] = 'Runner/Runner-Bridging-Header.h'
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited) '
        config.build_settings['HEADER_SEARCH_PATHS'] << '"$(SRCROOT)/Runner" '
      end
    end
  end

  # 3. 阿里 SDK 补丁 (GeneratedPluginRegistrant.m)
  reg_m = File.join(Dir.pwd, 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(reg_m)
    puts "DEBUG: Patching GeneratedPluginRegistrant..."
    content = File.read(reg_m)
    if content.include?('@import flutter_livepush_plugin;')
      content.gsub!('@import flutter_livepush_plugin;', '#import "AlivcLivePusherPlugin.h"')
      File.open(reg_m, 'w') { |f| f.write(content) }
      puts "SUCCESS: Patched Alivc import."
    end
  end
end